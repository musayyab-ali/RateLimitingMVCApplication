@model RateLimitWebApplication.ViewModel.CommentViewModel

<table style="width:100%;border:2px solid green;margin-top:100px;">

    <tr>
        <td>
            @Model.CommentOn.ToString("dd-MMM-yyyy")
        </td>
    </tr>
    <tr>
        <td>
            @Model.CommentDescription
        </td>
    </tr>
    <tr>
        <td>
           @for (int i = 0; i < Model.Rating; i++)
           {
               <span class="glyphicon glyphicon-star"></span>
           }
            @for (int i = Model.Rating; i< 5; i++ )
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </td>
    </tr>
</table>